local WindUI = loadstring(game:HttpGet("https://tree-hub.vercel.app/api/UI/WindUI"))()

local Window = WindUI:CreateWindow({
    Title = "Character Selection",
    Icon = "users",
    Author = "Hazaku",
    Folder = "CharacterHub",
    Size = UDim2.fromOffset(580, 460),
    Transparent = true,
    Theme = "Dark",
    SideBarWidth = 200,
})

local CharacterTab = Window:Tab({ 
    Title = "Characters", 
    Icon = "user", 
    Desc = "Select a character moveset" 
})

local function setCharacterMoveset(character)
    local args = {
        [1] = "SetMoveset",
        [2] = character
    }

    game:GetService("ReplicatedStorage").Remotes.Comunicator.Set:FireServer(unpack(args))
end

local characters = {
    { Name = "Jun", ID = "Jun" },
    { Name = "Gojo", ID = "Gojo" },
    { Name = "Sukuna", ID = "Sukuna" },
    { Name = "Kratos", ID = "Kratos" },
    { Name = "Martial Artist", ID = "MartialArtist" },
    { Name = "Admin", ID = "Admin" }
}

for _, character in ipairs(characters) do
    CharacterTab:Button({
        Title = character.Name,
        Desc = "Select " .. character.Name,
        Callback = function() 
            setCharacterMoveset(character.ID) 
            WindUI:Notify({
                Title = "Character Selected",
                Content = character.Name .. " moveset activated!",
                Icon = "check",
                Duration = 3
            })
        end
    })
end

Window:SelectTab(1)
